@model List<Prodotto>

<h1>Vetrina</h1>
<div class="vetrina">
    @if (Model != null && Model.Any())
    {
        @foreach (var prodotto in Model)
        {
            <div class="prodotto">
                <img src="@prodotto.ImmagineCopertina" alt="@prodotto.Nome" />
                <h3>@prodotto.Nome</h3>
                <p>Prezzo: €@prodotto.Prezzo</p>
                <a href="@Url.Action("Dettagli", "Prodotto", new { id = prodotto.Id })">Dettagli</a>
            </div>
        }
    }
    else
    {
        <p>No products available.</p>
    }
</div>



